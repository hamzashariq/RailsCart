<section class="min-h-screen bg-gradient-to-br from-indigo-100 via-white to-purple-100 dark:from-gray-900 dark:via-gray-800 dark:to-gray-900">
  <div class="flex flex-col items-center justify-center px-6 py-8 mx-auto md:h-screen lg:py-0">
      <div class="flex items-center mb-6 text-3xl font-bold text-gray-900 dark:text-white">
        <span class="bg-gradient-to-r from-indigo-600 to-purple-600 text-transparent bg-clip-text"><%= current_tenant.name %></span>
      </div>
      <div class="w-full bg-white/80 backdrop-blur-sm rounded-xl shadow-2xl dark:border md:mt-0 sm:max-w-md xl:p-0 dark:bg-gray-800/80 dark:border-gray-700">
          <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
              <h1 class="text-2xl font-bold leading-tight tracking-tight text-gray-900 md:text-3xl dark:text-white text-center">
                  Create an Account
              </h1>
              <p class="text-center text-gray-500 dark:text-gray-400 mb-6">Join us and start your journey</p>
              <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-4 md:space-y-6" }) do |f| %>
                <div class="grid grid-cols-2 gap-4">
                    <div>
                        <%= f.label :first_name, "First name", class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
                        <%= f.text_field :first_name, placeholder: "John", class: "bg-gray-50/50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-indigo-600 focus:border-indigo-600 block w-full p-3 dark:bg-gray-700/50 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-indigo-500 dark:focus:border-indigo-500 transition-all duration-200", required: true %>
                    </div>
                    <div>
                        <%= f.label :last_name, "Last name", class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
                        <%= f.text_field :last_name, placeholder: "Doe", class: "bg-gray-50/50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-indigo-600 focus:border-indigo-600 block w-full p-3 dark:bg-gray-700/50 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-indigo-500 dark:focus:border-indigo-500 transition-all duration-200", required: true %>
                    </div>
                </div>
                <div>
                    <%= f.label :email, "Your email", class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
                    <%= f.email_field :email, class: "bg-gray-50/50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-indigo-600 focus:border-indigo-600 block w-full p-3 dark:bg-gray-700/50 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-indigo-500 dark:focus:border-indigo-500 transition-all duration-200", placeholder: "name@company.com", required: true %>
                </div>
                <div>
                    <%= f.label :password, "Password", class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
                    <% if @minimum_password_length %>
                      <p class="text-xs text-gray-500 dark:text-gray-400 mb-2">(<%= @minimum_password_length %> characters minimum)</p>
                    <% end %>
                    <%= f.password_field :password, placeholder: "••••••••", class: "bg-gray-50/50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-indigo-600 focus:border-indigo-600 block w-full p-3 dark:bg-gray-700/50 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-indigo-500 dark:focus:border-indigo-500 transition-all duration-200", required: true %>
                </div>
                <div>
                    <%= f.label :password_confirmation, "Confirm password", class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
                    <%= f.password_field :password_confirmation, placeholder: "••••••••", class: "bg-gray-50/50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-indigo-600 focus:border-indigo-600 block w-full p-3 dark:bg-gray-700/50 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-indigo-500 dark:focus:border-indigo-500 transition-all duration-200", required: true %>
                </div>
                <div class="flex items-start">
                    <div class="flex items-center h-5">
                      <input id="terms" aria-describedby="terms" type="checkbox" class="w-4 h-4 border border-gray-300 rounded bg-gray-50 focus:ring-3 focus:ring-indigo-300 dark:bg-gray-700 dark:border-gray-600 dark:focus:ring-indigo-600 dark:ring-offset-gray-800" required="">
                    </div>
                    <div class="ml-3 text-sm">
                      <label for="terms" class="font-light text-gray-500 dark:text-gray-300">I accept the <a class="font-medium text-indigo-600 hover:text-indigo-500 dark:text-indigo-400 transition-colors duration-200" href="#">Terms and Conditions</a></label>
                    </div>
                </div>
                <%= f.submit "Create an account", class: "w-full text-white bg-gradient-to-r from-indigo-600 to-purple-600 hover:from-indigo-700 hover:to-purple-700 focus:ring-4 focus:outline-none focus:ring-indigo-300 font-medium rounded-lg text-sm px-5 py-3 text-center dark:focus:ring-indigo-800 transition-all duration-200 transform hover:scale-[1.02]" %>
                <p class="text-sm font-light text-gray-500 dark:text-gray-400 text-center">
                    Already have an account? <%= link_to "Login here", new_user_session_path, class: "font-medium text-indigo-600 hover:text-indigo-500 dark:text-indigo-400 transition-colors duration-200" %>
                </p>
              <% end %>
          </div>
      </div>
  </div>
</section>