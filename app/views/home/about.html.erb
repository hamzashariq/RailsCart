<div class="bg-white">
  <div class="max-w-7xl mx-auto py-16 px-4 sm:px-6 lg:px-8">
    <div class="text-center">
      <h2 class="text-3xl font-extrabold tracking-tight text-gray-900 sm:text-4xl">
        About <%= current_tenant.name %>
      </h2>
    </div>
    
    <div class="mt-8 max-w-3xl mx-auto">
      <% if current_tenant.about_page_content.present? %>
        <div class="prose prose-indigo prose-lg text-gray-500">
          <%= simple_format(current_tenant.about_page_content, class: "text-lg leading-relaxed") %>
        </div>
      <% else %>
        <p class="text-gray-500 italic text-center">No about page content has been added yet.</p>
      <% end %>
    </div>
  </div>
</div>
